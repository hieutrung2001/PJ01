@model PJ01.Core.ViewModels.Requests.Classes.EditViewModel

@{
    ViewData["Title"] = "Details";
}

@Html.AntiForgeryToken()
<div class="row d-flex justify-content-center mt-lg-5">
    <div class="col-4">
        <h3 class="text-center">Details</h3>
        <hr />  
        <form id="formEditClass">
            <input type="hidden" asp-for="Id" />
            <!-- Fullname input -->
            <div class="col-auto">
                <label class="form-label" asp-for="Name"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div

            <div class="col-auto">
                <label class="form-label">Selected</label>
                <br />
                @if (Model.StudentClasses.Any())
                {
                    foreach (var item in Model.StudentClasses)
                    {
                        <a asp-action="Details" asp-controller="Students" asp-route-id="@item.StudentId">@item.Student?.FullName, </a>    
                    }
                }
            </div>

            <!-- Submit button -->
            <div class="form-group d-flex justify-content-between">
                <button type="button" class="btn bg-secondary" id="btnPrevious" data-mdb-ripple-init>Back</button>
            </div>
            @* <button data-mdb-ripple-init type="button" id="btnSubmit" class="btn btn-primary btn- mb-4">Save</button>
            *@
        </form>
    </div>
</div>
@section Scripts {
    <script>
        $('#autoSelect2').select2()

        $(document).ready(() => {
            $('#btnPrevious').on('click', () => {
                window.location = '@Url.Action("Index", "Classes")';
            })


        })
    </script>
}